# ==============================================================================
# CONFIGURAÇÕES DO AGENTE SDR WHATSAPP
# ==============================================================================
# Copie este arquivo para .env e preencha as credenciais
#
# IMPORTANTE: Nunca compartilhe suas credenciais ou faça commit do arquivo .env
# ==============================================================================

# ------------------------------------------------------------------------------
# OpenAI
# ------------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
OPENAI_MODEL_CHAT=gpt-4o-mini
OPENAI_MODEL_TRANSCRIBE=gpt-4o-transcribe
OPENAI_MODEL_EMBEDDING=text-embedding-3-small

# ------------------------------------------------------------------------------
# ElevenLabs (Text-to-Speech)
# ------------------------------------------------------------------------------
ELEVENLABS_API_KEY=...
ELEVENLABS_MODEL=eleven_multilingual_v2
ELEVENLABS_VOICE_ID=...

# ------------------------------------------------------------------------------
# WhatsApp Business API (Meta)
# ------------------------------------------------------------------------------
WHATSAPP_ACCESS_TOKEN=...
WHATSAPP_PHONE_NUMBER_ID=...
WHATSAPP_VERIFY_TOKEN=...
WHATSAPP_WEBHOOK_SECRET=...

# ------------------------------------------------------------------------------
# Google Calendar API
# ------------------------------------------------------------------------------
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback
GOOGLE_CREDENTIALS_PATH=./config/google_credentials.json
GOOGLE_TOKEN_PATH=./config/google_token.json

# ------------------------------------------------------------------------------
# Supabase
# ------------------------------------------------------------------------------
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=...
SUPABASE_SERVICE_KEY=...

# ------------------------------------------------------------------------------
# Redis
# ------------------------------------------------------------------------------
# DESENVOLVIMENTO: localhost
# PRODUÇÃO (Easypanel): redis (nome do serviço no docker-compose)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SUA_SENHA_REDIS_SEGURA
REDIS_DB=0

# ------------------------------------------------------------------------------
# RabbitMQ
# ------------------------------------------------------------------------------
# DESENVOLVIMENTO: localhost
# PRODUÇÃO (Easypanel): rabbitmq (nome do serviço no docker-compose)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=SUA_SENHA_RABBITMQ_SEGURA
RABBITMQ_QUEUE=whatsapp_messages

# ------------------------------------------------------------------------------
# Configurações Gerais
# ------------------------------------------------------------------------------
ENVIRONMENT=development  # development, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
MAX_CONCURRENT_MESSAGES=10

# Configurações do Agente
COMPANY_NAME=Vertical Partners
PRODUCT_NAME=Agentes de IA
AGENT_NAME=Iara
MESSAGE_BUFFER_SECONDS=30
MAX_FRAGMENT_WORDS=30
FOLLOWUP_CHECK_INTERVAL=5

# ------------------------------------------------------------------------------
# URLs de Vídeo
# ------------------------------------------------------------------------------
VIDEO_BOAS_VINDAS_URL=https://supabase.co/storage/v1/object/public/videos/boas-vindas.mp4

# ------------------------------------------------------------------------------
# Servidor Web (FastAPI)
# ------------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
RELOAD=True  # Hot reload em development
